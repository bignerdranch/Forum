<%= @forum_topic.title %>
<%= form_for ([@forum_topic, @post]) do |f| %><br />

  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@post.errors.count, "error") %>
        prohibited this post from being saved:
      </h2>
      <ul>
        <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
    <% end %>

  <% if params[:preview_button] %>
    <%= @post.formatted_content %><br />
    <%= @post.accompanying_image %><br />

    <%= f.label :content %><br />
    <%= f.text_area :content %><br />

    <%= f.label :post_image %><br />
    <%= f.file_field :post_image %><br />

    <%= f.submit "Submit" %>
  <% else %>

    <%= f.label :content %><br />
    <%= f.text_area :content %><br />

    <%= f.label :post_image %><br />
    <%= f.file_field :post_image %><br />

    <%= f.submit "Submit" %>
    <%= f.submit "Preview", name: "preview_button" %>

  <% end %>

<% end %>
